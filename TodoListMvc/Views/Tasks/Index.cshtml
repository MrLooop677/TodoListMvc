@model IEnumerable<TodoItem>
@{
    ViewData["Title"] = "Tasks";
    string userName = ViewBag.UserName ?? "User";
}
<h2>@userName's Tasks</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Create New Task</a>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Deadline</th>
            <th>File</th>
            <th style="width:180px">Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        var daysLeft = (item.Deadline - DateTime.Now).TotalDays;
        var isNear = daysLeft <= 1;
        <tr class="@(isNear ? "table-danger" : "")">
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Deadline.ToString("yyyy-MM-dd")</td>
            <td>
                @if (!string.IsNullOrEmpty(item.File))
                {
                    <a href="@item.File" target="_blank" download class="btn btn-sm btn-outline-secondary">Preview / Download</a>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Delete this task?');">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
